<Window x:Class="teste_tecnico.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:teste_tecnico"
        xmlns:views="clr-namespace:teste_tecnico.Views"
        mc:Ignorable="d"
        Title="Gestão de Cadastros" Height="500" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Pessoas">
                <views:PessoasView/>
            </TabItem>
            <TabItem Header="Produtos">
                <views:ProdutosView/>
            </TabItem>
            <TabItem Header="Pedidos">
                <views:PedidosView/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
